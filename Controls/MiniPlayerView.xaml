<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:News_Radio_app.ViewModels"
             x:Class="News_Radio_app.Controls.MiniPlayerView"
             x:DataType="viewModels:MiniPlayerViewModel">
    <ContentView.BindingContext>
        <viewModels:MiniPlayerViewModel/>
    </ContentView.BindingContext>
    <Grid ColumnDefinitions="Auto, * , Auto">
        <!-- <Image Source="{Binding AlbumArt}"
                WidthRequest="50"
                HeightRequest="50"/> -->
        <StackLayout Grid.Column="1"
                Padding="5">
            <Label Text="{Binding Title}"
                    TextColor="White"
                    FontSize="14"/>
            <Label Text="{Binding Artist}"
                    TextColor="Gray"
                    FontSize="12"/>
        </StackLayout>
        <Button Grid.Column="2"
                Text="▶️"
                Command="{Binding PlayPauseCommand}"/>
    </Grid>
</ContentView>
